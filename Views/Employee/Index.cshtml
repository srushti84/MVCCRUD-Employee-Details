@model IEnumerable<MVCCRUD.Models.Domain.Employee>

@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Employees</h1>

<div class="container shadow p-5">

    <div class="col mb-3">
        <a asp-controller="Employee" asp-action="Add" class="btn btn-lg btn-primary"> Add Employee</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Employee Id</th>
                    <th scope="col">Employee Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Salary</th>
                    <th scope="col">Date of Birth</th>
                    <th scope="col">Department</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>@employee.Email</td>
                        <td>@employee.Salary</td>
                        <td>@employee.DateOfBirth.ToShortDateString()</td>
                        <td>@employee.Department</td>
                        <td>
                            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No employees found.</p>
    }
</div>
